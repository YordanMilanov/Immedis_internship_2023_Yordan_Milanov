@using HCMS.Web.ViewModels.Education;
@model List<EducationViewModel>;

@{
    ViewBag.Title = "Educations";
    string? username = ViewData["username"]!.ToString();

    if (username != null)
    {
        ViewBag.Title += " - " + username;
    }
}

<div class="container all-container">
   
    <h2 class="text-center">@ViewBag.Title</h2>  
    <hr />

    @* Education Cards *@
    @if (!Model.Any())
    {
        <h2 class="text-center">No education information found!</h2>
    }

    <div class="container">
        <div class="row justify-content-center">
            @foreach (var education in Model)
            {
                <partial name="_EducationCardPartial" model="@education" />
            }
        </div>
    </div>

    <div class="row justify-content-center">
        @* previous page *@
        <div class="col-1 mt-4  d-flex justify-content-end form-group">
            <div class="form-group">
                <btn type="submit" class="btn btn-primary" id="previousPageButton"><<</btn>
            </div>
        </div>


        @* next page button *@
        <div class="col-1 mt-4 form-group">
            <div class="form-group">
                <btn type="submit" class="btn btn-primary" id="nextPageButton">>></btn>
            </div>
        </div>
    </div>
    <hr />

    @* Page navigation *@
    <div class="row justify-content-center">
        <div class="col-1 mb-3 d-flex justify-content-center">
            @* @if (Model.WorkRecords.Any())
            {
                @if (maxPage == 1)
                {
                    <btn class="btn btn-success mx-1 disabled">@Model.CurrentPage</btn>
                }
                else
                {
                    @if (Model.CurrentPage > 1)
                    {
                        <a class="btn btn-outline-light disabled mx-1">1</a>
                    }
                    @if (Model.CurrentPage == maxPage)
                    {
                        <b class="btn btn-outline-light disabled">...</b>
                    }
                    <btn class="btn btn-success mx-1 disabled">@Model.CurrentPage</btn>
                    @if (Model.CurrentPage == 1)
                    {
                        <b class="btn btn-outline-light disabled">...</b>
                    }
                    @if (Model.CurrentPage < maxPage)
                    {
                        <a class="btn btn-outline-light disabled mx-1">@maxPage</a>
                    }
                }
            } *@
        </div>
    </div>
</div>


@section Scripts
    {
    <script src="~/js/Education.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/Education.css" asp-append-version="true" />
}
