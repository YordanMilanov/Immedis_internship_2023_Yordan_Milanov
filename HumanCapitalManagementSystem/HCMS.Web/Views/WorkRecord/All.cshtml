@{
    ViewBag.Title = "Work Records";
}
@model HCMS.Web.ViewModels.WorkRecord.WorkRecordQueryModel


@{
    //C# Calculations

    @* Check if the currentpage is the first and set it to first *@

    int previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    // take the total count of work records to calculate the pages depending no how many items per page
    int maxPage = (int)Math.Ceiling((double)Model.TotalWorkRecords /
                                    Model.WorkRecordsPerPage);

    //check check if this page is the last
        bool shouldNextPageButtonBeDisabled = Model.CurrentPage == maxPage || !Model.WorkRecords.Any();
}

<div class="container text-white bg-dark">
    <h2 class="text-center">@ViewBag.Title</h2>
    <hr />
    <form method="get">
        <div class="row justify-content-between align-items-center">
            <div class="col-1 mt-4">
                <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                   asp-controller="WorkRecord"
                   asp-action="All"
                   asp-route-currentPage="@previousPage"
                   asp-route-searchTerm="@Model.SearchString"><<</a>
            </div>

            <div class="col-3 form-group text-center justify-content-center">
                <div class="form-group">
                    <label asp-for="WorkRecordsPerPage"></label>
                    <select asp-for="WorkRecordsPerPage" class="form-control text-center">
                        <option value="3">3</option>
                        <option value="6">6</option>
                        <option value="9">9</option>
                    </select>
                </div>
            </div>

            <div class="col-3 form-group text-center justify-content-center">
                <div class="form-group">
                    <label asp-for="OrderPageEnum"></label>
                    <select asp-for="OrderPageEnum" class="form-control text-center">
                        <option value="0">Newest</option>
                        <option value="1">Oldest</option>
                        <option value="2">Price Ascending</option>
                        <option value="3">Price Descending</option>
                    </select>
                </div>
            </div>
            
            <div class="col-3 form-group text-center justify-content-center">
                <div class="form-group">
                    <label asp-for="SearchString"></label>
                    <input asp-for="SearchString" type="text" class="form-control text-center" placeholder="Search word" />
                </div>
            </div>

            <div class="col-1 mt-4 form-group">
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary"/>
                </div>
            </div>

            <div class="col-1 mt-4">
                <a class="btn btn-primary right-search-button
           @(shouldNextPageButtonBeDisabled ? "disabled" : string.Empty)"
                   asp-controller="WorkRecord" asp-controller="WorkRecord" asp-action="All"
                   asp-route-currentPage="@(Model.CurrentPage + 1)"
                   asp-route-searchTerm="@Model.SearchString">>>
                </a>
            </div>
        </div>
    </form>

    <div class="row mb-5">

    </div>

    @if (!Model.WorkRecords.Any())
    {
        <h2 class="text-center">No work records found!</h2>
    }

    <div class="row">
        @foreach (var workRecord in Model.WorkRecords)
        {
            <partial name="_WorkRecordCardPartial" model="@workRecord" />
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/WorkRecord.css" asp-append-version="true" />
}
